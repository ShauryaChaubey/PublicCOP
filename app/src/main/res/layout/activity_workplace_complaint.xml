<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkplaceComplaint">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/background"
            android:textColor="#FFFFFF"
            android:text="Complaint Registration"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingLeft="40dp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022" />

        <EditText
            android:id="@+id/name_applicant"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/text_background"
            android:paddingLeft="20dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:hint="Name"
            android:textSize="16sp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.03" />

        <EditText
            android:id="@+id/age_applicant"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/text_background"
            android:paddingLeft="20dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:hint="Age"
            android:layout_marginBottom="30dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.144" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/text_background"
            android:paddingLeft="20dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:hint="Email ID"
            android:layout_marginBottom="30dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.276" />

        <EditText
            android:id="@+id/pincode"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/text_background"
            android:paddingLeft="20dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:hint="Pincode"
            android:layout_marginBottom="30dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.534" />

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/text_background"
            android:paddingLeft="20dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:hint="Address"
            android:textSize="16sp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.408" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/text_background"
            android:paddingLeft="20dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:hint="Company "
            android:layout_marginBottom="30dp"
            android:id="@+id/company"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pincode"
            app:layout_constraintVertical_bias="0.156" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="53dp"
            android:layout_marginRight="53dp"
            android:background="#E2E2E2"
            android:id="@+id/sub_category_spinner"
            android:scrollbars="vertical"
            android:textAlignment="textStart"
            android:layout_marginBottom="20dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/text_background"
            android:paddingLeft="20dp"
            android:id="@+id/other_problem"
            android:hint="Other"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_gravity="right"
            android:textSize="11.6sp"
            android:layout_marginEnd="45dp"
            android:text="If not present in the given list"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_background"
            android:padding="18dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="55dp"
            android:hint="Explain your problem"
            android:id="@+id/problem"
            android:layout_marginLeft="55dp"
            android:lines="8"
            android:minLines="6"
            android:gravity="top|left"
            android:maxLines="10"
            android:scrollbars="vertical"
            />

        <Button
            android:onClick="register"
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/button_background"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:layout_marginBottom="20dp"
            android:text="Register"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pincode"
            app:layout_constraintVertical_bias="1.0" />



    </LinearLayout>


</ScrollView>
